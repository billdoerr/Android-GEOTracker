<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonPrefSave" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/button_save</item>
        <item name="android:textColor">@color/colorButtonSaveText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonPrefCancel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:textColor">@color/colorButtonCancelText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="DrawerTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextViewLabel_TrackReviewSummary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewData_TrackReviewSummary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewLabel_TrackDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewData_TrackDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.7</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewUnits_TrackDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.15</item>
        <item name="android:text"> </item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">14sp</item>


    </style>

</resources>
