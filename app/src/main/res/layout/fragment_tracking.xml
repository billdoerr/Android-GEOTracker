<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="?attr/actionBarSize" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnStartTracking"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_start_tracking"
                android:src="@drawable/ic_baseline_play_arrow_48px"
                android:text="@string/btn_start_tracking"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnPauseTracking"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_pause_tracking"
                android:src="@drawable/ic_baseline_pause_48px"
                android:text="@string/btn_pause_tracking"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnStopTracking"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_stop_tracking"
                android:src="@drawable/ic_baseline_stop_48px"
                android:text="@string/btn_stop_tracking"
                android:textAlignment="center"
                android:textStyle="bold" />

        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="?attr/actionBarSize" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp">

                    <EditText
                        android:id="@+id/textTripTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/textTripTitle"
                        android:hint="@string/textTripTitle"
                        android:inputType="textCapWords"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:importantForAutofill="no" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textLatitudeLongitude"
                        android:text="@string/textLatitudeLongitude"
                        style="@style/TextViewData_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textLatitude" />

                    <TextView
                        android:id="@+id/textLatitudeData"
                        style="@style/TextViewData_TrackDetail" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textLongitude" />

                    <TextView
                        android:id="@+id/textLongitudeData"
                        style="@style/TextViewData_TrackDetail" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textBearing" />

                    <TextView
                        android:id="@+id/textBearingData"
                        style="@style/TextViewData_TrackDetail" />

                    <TextView
                        style="@style/TextViewUnits_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textElevation" />

                    <TextView
                        android:id="@+id/textElevationData"
                        style="@style/TextViewData_TrackDetail" />

                    <TextView
                        android:id="@+id/textElevationUnits"
                        style="@style/TextViewUnits_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textSpeed" />

                    <TextView
                        android:id="@+id/textSpeedData"
                        style="@style/TextViewData_TrackDetail" />

                    <TextView
                        android:id="@+id/textSpeedUnits"
                        style="@style/TextViewUnits_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textAccuracy" />

                    <TextView
                        android:id="@+id/textAccuracyData"
                        style="@style/TextViewData_TrackDetail" />

                    <TextView
                        android:id="@+id/textAccuracyUnits"
                        style="@style/TextViewUnits_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textCurrentTime" />

                    <TextView
                        android:id="@+id/textCurrentTimeData"
                        style="@style/TextViewData_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textStartTime" />

                    <TextView
                        android:id="@+id/textStartTimeData"
                        style="@style/TextViewData_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textEndTime" />

                    <TextView
                        android:id="@+id/textEndTimeData"
                        style="@style/TextViewData_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textMovingTime" />

                    <TextView
                        android:id="@+id/textTrackingTimeData"
                        style="@style/TextViewData_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textPausedTime" />

                    <TextView
                        android:id="@+id/textPausedTimeData"
                        style="@style/TextViewData_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        style="@style/TextViewLabel_TrackDetail"
                        android:text="@string/textTotalTime" />

                    <TextView
                        android:id="@+id/textTotalTimeData"
                        style="@style/TextViewData_TrackDetail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_border">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>

            </LinearLayout>

        </ScrollView>

</TableLayout>

